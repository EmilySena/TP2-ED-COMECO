#include <iostream>
#include <string>
#include <vector>
#include "Civilizacao.h"

using namespace std;
int main() {
    Civilizacao c1; // new Civilizacao();
    string x;
    cin>>x;
    c1.SetNome(x);
    int d{};
    cin>>d;
    c1.SetDistancia(d);
    int p{};
    cin>>p;
    c1.SetPopulacao(p);
    cout<<"-----------------------"<<endl;
    c1.Imprimir();
    Civilizacao c2;// = new Civilizacao();
    cin>>x>>d>>p;
    c2.SetNome(x);
    c2.SetDistancia(d);
    c2.SetPopulacao(p);
    cout<<"-----------------------"<<endl;
    c2.Imprimir();
    Civilizacao civilizacoes[]{c1,c2};
    cout<<"========================"<<endl;
    for (auto c : civilizacoes){
        c.Imprimir();
    }
    int num{};
    cin>>num;
    cout<<"digite "<<num<<" civilizacoes"<<endl;
    for(int i=0; i<num; ++i){
        Civilizacao c1;
        cin>>x>>d>>p;
        c1.SetNome(x);
        c1.SetDistancia(d);
        c1.SetPopulacao(p);
        cout<<"----------"<<endl;
        c1.Imprimir();
        cout<<"Proxima: ";
    }




    
    cout << "Hello Easy C++ project!" <<endl;
    return 0;
}